/* components/calendar/calendar.wxss */
@import "../../style/common.wxss";

.mask {
  width: 100%;
  height: 100%;
  z-index: 100;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3)
}

.box {
  width: 600rpx;
  background-color: rgba(255, 255, 255, 0.5)
}

.box-item {
  width: 120rpx;
  height: 100rpx;
}

.box-btn {
  height: 180rpx;
}

.box-little {
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  overflow: hidden;
}

.little-item {
  position: absolute;
  left: 0;
  transition: transform 0.2s;
}
.cal-btn {
  width: 120rpx;
  height: 40rpx;
}

.box-num {

}

.num-txt {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center; 
  font-size: 60rpx;
  color: #ffffff;
}

.box-text {
  width: 50rpx;
}

/* 按钮 */
.confirm-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}