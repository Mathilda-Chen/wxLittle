/* components/navbar/navbar.wxss */

.nav {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 88rpx;
  background-color: #4FC1FF;
}

.back-home {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  height: 88rpx;
  z-index: 10000;
}

.back-img {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  color: #ffffff;
}