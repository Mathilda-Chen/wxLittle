/* pages/center/bug/bug.wxss */
@import "../../../style/common.wxss";

.top {
  z-index: 5;
  padding: 0 20rpx;
}

.top-img {
  width: 50rpx;
  height: 50rpx;
  flex-shrink: 0;
}

.box {
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.2);
}

.tip-circle {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  box-shadow:0 1px 2px rgba(0,0,0,.3);
}

.row-img {
  width: 30rpx;
  height: 30rpx;
  transition: transform 0.2s;
}

.rot-start {
  transform: rotate(90deg);
}

.rot-end {
  transform: rotate(0deg);
}

.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ffffff;
  box-shadow: 3px 3px 3px #d4d2d2;
  font-size: 70rpx;
  color: #000000;
  text-align: center;
  line-height: 100rpx;
  z-index: 100;
}

.add-btn:active {
  color: #ffffff;
  background-color: #fa7970;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}